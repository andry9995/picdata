<div class="ibox ibox-shadow">
	<div class="ibox-content">
		<div class="row">
			<div class="col-lg-3">
				<div class="row">
                    <div class="col-lg-12">
                        {{ render(controller('AppBundle:Commun:clients', { 'tous': 1, 'attr_id': 'decompte-client', 'label_col': 2, 'select_col': 10})) }}
                    </div>
                </div>
                <div class="row">
            		<div class="col-lg-12">
            			<form class="form-horizontal">
                            <div class="form-group" style="margin-bottom: 10px;">
                                <label for="decompte-site" class="control-label col-lg-2">
                                    <span>Site</span>
                                    <span class="label label-warning">0</span>
                                </label>
                                <div class="col-lg-10">
                                    <select data-ref="" class="site form-control"
                                            id="decompte-site"></select>
                                </div>
                            </div>
                        </form>
            		</div>
            	</div>
			</div>
			<div class="col-lg-3">
            	<div class="row">
            		<div class="col-lg-12">
            			{{ render(controller('AppBundle:Commun:exercices', { 'tous':2, 'attr_id' : 'decompte-exercice' , 'label_col':3, 'select_col':9, 'nbr': 8 } )) }}
            		</div>
            	</div>
            	<div class="row">
            		<div class="col-lg-12">
            			<form class="form-horizontal">
                            <div class="form-group" style="margin-bottom: 10px;">
                                <label for="decompte-dossier" class="control-label col-lg-3">
                                    <span>Dossiers</span>
                                    <span id="decompte-nb-dossier" class="label label-warning">0</span>
                                </label>
                                <div class="col-lg-9">
                                    <select class="dossier form-control" id="decompte-dossier"></select>
                                </div>
                            </div>
                        </form>
            		</div>
            	</div>
            </div>
            <div class="col-lg-3">
            	<div class="row">
            		<div class="col-lg-12">
            			<form class="form-horizontal">
                            <div class="form-group" style="margin-bottom: 10px;">
                                <label for="decompte-status" class="control-label col-lg-2">
                                    <span>Statut</span>
                                </label>
                                <div class="col-lg-10">
                                    <select data-ref="" class="site form-control" id="decompte-status">
                                    	<option value="0" selected="">Tous</option>	
                                    	<option value="1">Reçue</option>	
                                    	<option value="2">Saisie</option>	
                                    	<option value="3">Imputée</option>	
                                    </select>
                                </div>
                            </div>
                        </form>
            		</div>
            	</div>
            	<div class="row">
            		<div class="col-lg-2"></div>
            		<div class="col-lg-10">
            			<button type="button" class="decompte-btn-go btn btn-block btn-outline btn-primary pull-right">
            				<i class="fa fa-arrow-circle-o-right"></i> Go
            			</button>
                    </div>
            	</div>
            </div>
            <div class="col-lg-3">
            	
            </div>
		</div>
	</div>
</div>