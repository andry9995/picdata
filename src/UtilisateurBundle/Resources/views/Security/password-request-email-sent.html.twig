{% extends 'base-login.html.twig' %}

{% block title %}
    Mot de passe changé
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/utilisateur/css/login.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }} "></script>
    <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
{% endblock %}

{%- block body_class -%}
    gray-bg
{%- endblock -%}
{% block body %}
    <div class="row">
        <div id="first-login-container" class="col-lg-4 col-lg-offset-4 fadeInDown">
            <div class="text-center"><i class="fa fa-exclamation-circle fa-3x"></i></div>
            <div class="alert alert-success text-center">
                <h3>Un email à été envoyé à l'adresse <em>{{ user_email }}</em> qui contient les étapes à suivre
                    pour réinitialiser votre mot de passe.</h3>
            </div>
        </div>
    </div>
{% endblock %}