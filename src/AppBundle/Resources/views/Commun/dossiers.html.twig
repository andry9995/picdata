{#dossiers#}
{% if attr_id == '' %}
    {% set attr_id = 'dossier' %}
{% endif %}

{% set disable = '' %}
{% set selected = '' %}
{% if dossiers|length <= 1 %}

    {% if infoperdos is defined %}
        {% if infoperdos == 0 %}
            {% set disable = 'disabled' %}
            {% set selected = 'selected' %}
        {% else %}
            {% set disable = '' %}
            {% set selected = '' %}
        {% endif %}
    {% endif %}


{% endif %}
<form class="form-horizontal">
    <div class="form-group">
        <label class="col-lg-2 control-label">
            <span>Dossier</span>
            <span class="label label-warning">{{ dossiers|length }}</span>
        </label>
        <div class="col-lg-10" style="position:relative;">
            <select data-ref="{{ attr_data }}" class="dossier form-control" id="{{ attr_id }}" {{ disable }}>
                {% if tous == 1 %}
                    <option value="{{ 0|boost }}" selected="selected">Tous</option>
                {% else %}
                    <option value="{{ 0|boost }}" selected="selected">&nbsp;</option>
                {% endif %}
                {% for dossier in dossiers %}
                    <option value="{{ dossier.id|boost }}" data-value="{{ dossier.id }}" {{ selected }}>{{ (dossier.nom != '') ? dossier.nom : ' ' }}</option>
                {% endfor %}
            </select>
            <span id="js_cloture" style="position:absolute;bottom: -10px;right: 0;opacity:0.9;"
                  class="label label-warning"></span>
        </div>
    </div>
</form>
