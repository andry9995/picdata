<div class="col-lg-12">

    <div class="form-inline">

        {#Retour @ liste an'ny note#}
        {% block noteList %}
        {% endblock %}

        {% if fromDetails is not defined %}
        <div class="input-group m-b">
            <div class="input-group-btn">

                {% set btnTxt = '<span><i class="fa fa-search"></i></span>&nbsp;&nbsp;Choisir la note&nbsp;&nbsp;<span class="caret"></span>' %}

                {% if note is not null %}
                    {% set btnTxt = note.libelle %}
                {% endif %}

                <button data-toggle="dropdown" class="btn btn-success dropdown-toggle btn-note-select" type="button" note-id="{{ (note is null) ? -1 : note.id|boost }}">{{ btnTxt|raw }}</button>
                <ul class="dropdown-menu">
                    <li data-id="-1">
                        <a href="#" class="depense-note-filtre">Toutes les notes</a>
                    </li>

                    {% for note in notes %}
                        <li data-id="{{ note.id|boost }}">
                            <a href="#" class="depense-note-filtre">{{ note.libelle }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        {% endif %}

        <div class="input-group m-b">
            <div class="input-group-btn">
                <button class="btn btn-success dropdown-toggle btn-depense-add" type="button"><span><i class="fa fa-plus"></i></span>&nbsp;&nbsp;Dépenses</button>

            </div>
        </div>

        <div class="input-group m-b">
            <div class="input-group-btn">
                <button data-toggle="dropdown" class="btn btn-success dropdown-toggle btn-depense-fk-add" type="button"><i class="fa fa-plus"></i>&nbsp;&nbsp; Frais Kilométriques</button>
                <ul class="dropdown-menu">

                </ul>
            </div>
        </div>

        {% if fromDetails is not defined %}
        <div class="input-group m-b">
            <div class="input-group-btn">
                <button class="btn btn-success dropdown-toggle btn-depense-filter" type="button"><span><i class="fa fa-search"></i></span>&nbsp;&nbsp;Filtrer</button>

            </div>
        </div>
        {% endif %}

        <div class="input-group m-b hidden">
            <div class="input-group-btn">
                <button data-toggle="dropdown" class="btn btn-success dropdown-toggle btn-depense-action" type="button"><i class="fa fa-bullseye"></i>&nbsp;&nbsp; Action &nbsp;<span class="caret"></span></button>
                <ul class="dropdown-menu">
                    {% block actionList %}
                        {#<li><a href="#" class="action-depense-editer">Editer</a></li>#}
                        <li><a href="#" class="action-depense-dupliquer">Dupliquer</a></li>
                        <li><a href="#" class="action-depense-note">Assigner à une note</a></li>
                        <li><a href="#" class="action-depense-supprimer">Supprimer</a></li>
                    {% endblock %}
                </ul>
            </div>
        </div>

        {{ include('NoteFraisBundle:Default:tableView.html.twig') }}

        <div class="total input-group pull-right">
            <span class="total total-ttc label"></span>
            <span class="total total-tva label"></span>
            <span class="total total-remboursable label"></span>
            <span class="total total-facturable label"></span>
        </div>

    </div>

</div>