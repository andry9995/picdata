<div class="form-horizontal">

    <div class="form-group">
        <label class="control-label col-lg-4">Intitulé</label>
        <div class="col-lg-8">
            <input type="text" placeholder="Initutlé" class="form-control" id="js_affaire_libelle" value="{{ (affaire is null) ? '' : affaire.libelle }}">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-lg-4">Référence interne</label>
        <div class="col-lg-8">
            <input type="text" placeholder="Référence interne" class="form-control" id="js_affaire_ref" value="{{ (affaire is null) ? '' : affaire.reference }}">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-lg-4">Nom du client</label>
        <div class="col-lg-8">
            <input type="text" placeholder="Nom du client" class="form-control" id="js_affaire_client" value="{{ (affaire is null) ? '' : affaire.nomClient }}">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-lg-4">Période</label>
        <div class="col-lg-8">
            <div class="input-daterange input-group" id="datepicker">
                <input type="text" class="input-sm form-control date" id="js_affaire_date_deb"
                       value="{{ (affaire is null) ? '' : (affaire.dateDeb is null) ? '' : affaire.dateDeb|date('d/m/Y') }}">
                <span class="input-group-addon">Au</span>
                <input type="text" class="input-sm form-control date" id="js_affaire_date_fin"
                       value="{{ (affaire is null) ? '' : (affaire.dateFin is null) ? '' : affaire.dateFin|date('d/m/Y') }}">
            </div>
        </div>
    </div>

