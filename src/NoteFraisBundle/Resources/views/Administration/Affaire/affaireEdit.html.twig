            {#<input type="checkbox" class="js-switch_5"  id="js_affaire_status" {{ (affaire is null) ? '' : (affaire.status == 1) ? 'checked' : '' }}/>#}
        {#</div>#}
    {#</div>#}


    <div class="row">

        <div class="form-group col-lg-4">
            <label class="col-lg-6 control-label">Facturable</label>
            <div class="col-lg-6">
                <input type="checkbox" class="js-switch_4"  id="js_affaire_facturable" {{ (affaire is null) ? '' : (affaire.facturable == 1) ? 'checked' : '' }}/>
            </div>
        </div>


        <div class="form-group col-lg-4">
            <label class="col-lg-4 control-label">Status</label>
            <div class="col-lg-6">
                <input type="checkbox" class="js-switch_5"  id="js_affaire_status" {{ (affaire is null) ? '' : (affaire.status == 1) ? 'checked' : '' }}/>
            </div>
        </div>


    </div>





    <div>
        <button class="btn btn-sm btn-primary pull-right" id="js_save_affaire"><strong>Sauvegarder</strong></button>
    </div>

</div>

