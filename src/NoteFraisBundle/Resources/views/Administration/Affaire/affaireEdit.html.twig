        {#<label class="col-lg-3 control-label">Facturable</label>#}
        {#<div class="col-lg-9">#}
            {#<input type="checkbox" class="js-switch_4"  id="js_affaire_facturable" {{ (affaire is null) ? '' : (affaire.facturable == 1) ? 'checked' : '' }}/>#}
        {#</div>#}
    {#</div>#}


    {#<div class="form-group">#}
        {#<label class="col-lg-3 control-label">Status</label>#}
