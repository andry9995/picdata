<div class="table-responsive">
    <table class="footable table table-striped table-hover toggle-arrow-tiny table-categorie" data-page-size="8">
        <thead>
        <tr>
            <th></th>
            <th>Catégorie</th>
            <th>Déscription</th>
            <th>Compte de charges</th>
            <th>Compte de Tva</th>
            <th>Etat</th>
        </tr>
        </thead>

        <tbody>
        {% for categorie in ndfCategorieDossiers %}

            {% set pccCharge = (categorie.pccCharge is null) ? '' : categorie.pccCharge.compte %}
            {% set pccTva = (categorie.pccTva is null) ? '' : categorie.pccTva.compte %}
            {% set dataStatus = (categorie.status is null) ? '0' : categorie.status %}

            {% set status = (dataStatus == 0) ? '<span class="label label-warning" data-status="0" style="display: inline-block;width: 100%;">Desctivée</span>' : '<span class="label label-info" data-status="1" style="display: inline-block;width: 100%;">Activée</span>' %}
            <tr data-id= {{ categorie.id|boost }}>
                <td class="categorie-check">
                    {#<input type="checkbox">#}
                    <div class="checkbox checkbox-success checkbox-inline">
                        <input type="checkbox" class="checkbox-success">
                        <label></label>
                    </div>
                </td>
                <td class="categorie-libelle">{{ categorie.libelle }}</td>
                <td class="categorie-description">{{ categorie.description }}</td>
                <td class="categorie-charge">{{ pccCharge }}</td>
                <td class="categorie-tva">{{ pccTva }}</td>
                <td class="categorie-status">{{ status|raw }}</td>
            </tr>
        {% endfor %}
        </tbody>

        <tfoot>
        <tr>
            <td colspan="12">
                <ul class="pagination pull-right"></ul>
            </td>
        </tr>
        </tfoot>


    </table>
</div>