<div class="form-horizontal">

    <div class="col-lg-12">


        <div class="form-group">
            <label class="control-label col-lg-3">Utilisateur</label>
            <div class="col-lg-9">
                <select class="form-control" id="js_note_utilisateur">
                    <option></option>
                    {% for utilisateur in utilisateurs %}
                        <option {{ (note is null) ? '' : (note.ndfUtilisateur is null)? '' : (note.ndfUtilisateur.id == utilisateur.id) ? 'selected' : '' }} value="{{ utilisateur.id|boost }}">{{ utilisateur.nom ~ utilisateur.prenom }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-lg-3">PÃ©riode</label>
            <div class="col-lg-9">
                {{ include('NoteFraisBundle:Note:periode.html.twig') }}
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-lg-3">Nom de la note</label>
            <div class="col-lg-9">
                <input type="text" placeholder="Exemple Voyage d'affaire" class="form-control" id="js_note_libelle"
                       value="{{ (note is null)? '' : note.libelle }}">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-lg-3">Description</label>
            <div class="col-lg-9">
                <input type="text" placeholder="Decrivez le but de votre note" class="form-control" id="js_note_description"
                       value="{{ (note is null)? '' : note.description  }}">
            </div>
        </div>

    </div>

</div>

<div class="ibox-content">

    <div class="pull-right">
        {#<button class="btn btn-sm" id="js_annuler_note"><strong>Annuler</strong></button>#}
        <button class="btn btn-sm btn-primary" id="js_save_note"><strong>Sauvegarder</strong></button>

    </div>

</div>