<div class="form-horizontal">
    <div class="form-group">
        <div class="form-group">
            <label class="col-lg-2 control-label">Nom</label>
            <div class="col-lg-10 text-center">
                <input type="text" placeholder="Nom" class="form-control" id="js_pack_libelle"  value="{{ (pack != null) ? pack.libelle : '' }}">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 text-right">
            <span class="btn btn-primary btn-sm" id="js_btn_save_pack"><i class="fa fa-floppy-o" aria-hidden="true"></i>&nbsp;Enregistrer</span>
            <span class="btn btn-white btn-sm js_close_modal"><i class="fa fa-times" aria-hidden="true"></i>&nbsp;Annuler</span>
        </div>
    </div>

    <input type="hidden" id="js_id_pack" value="{{ ((pack is null) ? 0 : pack.id)|boost }}">
    <input type="hidden" id="js_pack_reload" value="{{ (pack is null) ? 1 : 0 }}">
</div>