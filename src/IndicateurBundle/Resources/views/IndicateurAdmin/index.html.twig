{% extends 'AdminBundle:Default:index.html.twig' %}

{% block titre %}Admin Indicateur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/indicateur/css/index.css') }}">
    <link rel="stylesheet" href="{{ asset('css/plugins/tableResizable/jquery.resizableColumns.css') }}">
    <link rel="stylesheet" href="{{ asset('css/plugins/colorpicker/bootstrap-colorpicker.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/plugins/jquery-menu-context/jquery.contextMenu.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/etat/css/font.css') }}">
{% endblock %}

{% block contenu_droite %}
    {{ include('IndicateurBundle:IndicateurAdmin:filtre.html.twig',{'adminGranted':adminGranted}) }}
    <div class="ibox float-e-margins js_control_element">
        <div class="ibox-title">
            <h5 class="pull-left">Groupes&nbsp;</h5>
            <div class="ibox-tools">
                <span class="btn btn-white btn-xs js_group_show_edit js_add"><i class="fa fa-plus" aria-hidden="true"></i></span>
            </div>
        </div>
        <div class="ibox-content" style="padding: 5px!important;">
            <div class="panel-body" style="padding: 1px!important;">
                <div class="panel-group js_cl_groups_contener scroller" id="id_groups_contener" {#id="js_div_accordion_pack"#}>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# resizable table #}
    <script src="{{ asset('js/plugins/tableResizable/jquery.resizableColumns.min.js') }}"></script>
    {# Color picker #}
    <script src="{{ asset('js/plugins/colorpicker/bootstrap-colorpicker.min.js') }}"></script>
    {# menu context #}
    <script src="{{ asset('js/plugins/jquery-menu-context/jquery.contextMenu.js') }}"></script>

    <script src="{{ asset('bundles/app/js/commun.js') }}?v=1.0"></script>
    <script src="{{ asset('bundles/indicateur/js/indicateurAdmin/filtre.js') }}?v=1.0"></script>
    <script src="{{ asset('bundles/indicateur/js/indicateurAdmin/group.js') }}?v=1.0"></script>
    <script src="{{ asset('bundles/indicateur/js/indicateurAdmin/pack.js') }}?v=1.0"></script>
    <script src="{{ asset('bundles/indicateur/js/indicateurAdmin/indicateur.js') }}?v=1.0"></script>
    <script src="{{ asset('bundles/indicateur/js/indicateurAdmin/cellule.js') }}?v=2"></script>

    <script src="{{ asset('bundles/etat/js/admin/style.js') }}?v=1.0"></script>
    <script src="{{ asset('bundles/etat/js/admin/font.js') }}"></script>

    <script src="{{ asset('bundles/indicateur/js/indicateurAdmin/index.js') }}?v=1.0"></script>
{% endblock %}
