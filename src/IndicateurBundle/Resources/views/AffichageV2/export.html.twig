<style>
    .table-donnee {
        border-collapse: collapse;
        border: 1px solid #CCCCCC;
    }
    .table-donnee td,th{
        padding: 2px;
    }
    .table-donnee thead, .table-donnee tr{
        padding: 0px;
    }
    .table-donnee th{
        background-color: #CCCCCC;
        text-align: center;
    }
    .table-donnee td{
        word-wrap: break-word;
    }
    .credit{
        color: #880000;
    }
    .gray{
        background-color: #f5f5f5;
    }
    .gras{
        font-weight: bold;
    }
    .gauche{
        text-align: left;
    }
    .centrer{
        text-align: center;
    }
    .droite{
        text-align: right;
    }
</style>

<div style="width:100%;">
    <table width="100%">
        <tr>
            <th colspan="2" align="center">{{ indicateur.libelle }}</th>
        </tr>
        <tr>
            <th width="15%">Client: </th>
            <th width="85%">{{ dossier.site.client.nom }}</th>
        </tr>
        <tr>
            <th>Site: </th>
            <th>{{ dossier.site.nom }}</th>
        </tr>
        <tr>
            <th>Dossier: </th>
            <th>{{ dossier.nom }}</th>
        </tr>
        <tr>
            <th>Edit&eacute; le: </th>
            <th>{{ 'now'|date('d-m-Y') }}</th>
        </tr>
    </table>
</div>

<div style="width:100%;">
    <table class="table-donnee" border="1" style="width: 100%">
        {% for header in headers %}
            <tr>
                {% for cell in header %}
                    <th>{{ cell.v }}</th>
                {% endfor %}
            </tr>
        {% endfor %}

        {% for data in datas %}
            <tr>
                {% for cell in data %}
                    <td align="{{ cell.t == 1 ? 'right' : '' }}">{{ cell.v }}</td>
                {% endfor %}
            </tr>
        {% endfor %}
    </table>
</div>

<div style="width:100%;">
    {{ commentaire }}
</div>