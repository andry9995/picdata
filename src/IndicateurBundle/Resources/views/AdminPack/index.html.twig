{% extends 'AdminBundle:Default:index.html.twig' %}

{% block titre %}Pack Indicateurs{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/plugins/jsTree/style.min.css') }}" rel="stylesheet">
{% endblock %}

{% block contenu_droite %}
    {{ include('IndicateurBundle:AdminPack:filtre.html.twig',{'adminGranted':adminGranted}) }}
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5 class="pull-left">Packs Indicateurs</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <span class="btn btn-primary btn-xs js_pack_show_edit js_add"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;Nouveau&nbsp;Pack</span>
            <div class="panel-body">
                <div class="panel-group" id="js_div_accordion_pack">

                </div>
            </div>
        </div>
    </div>
