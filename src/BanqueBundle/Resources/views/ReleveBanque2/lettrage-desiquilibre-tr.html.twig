        <span class="btn btn-white btn-xs cl_action_in_desiquilibre" data-action="{{ action }}">
            <i class="fa {{ (action == 1) ? 'fa-arrow-up' : 'fa-trash-o' }}" aria-hidden="true"></i>
        </span>
    </td>
    <td>{{ result.d|date('d/m/Y') }}</td>
    <td class="js_show_image text-primary pointer" data-id_image="{{ result.i.id|boost }}">{{ result.i.n }}</td>
