<div class="row" id="modal-param">
    <div class="col-lg-6">
        <div class="ibox float-e-margins" data-type="0">
            <div class="ibox-title">
                <h5>Plan Comptable</h5>
                <div class="ibox-tools"></div>
            </div>
            <div class="ibox-content">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Compte</label>
                        <div class="col-lg-9">
                            <input type="text" placeholder="Compte" class="form-control cl_add cl_compte">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Intitul&eacute;</label>
                        <div class="col-lg-9">
                            <input type="text" placeholder="Intitulé" class="form-control cl_add cl_intitule">
                        </div>
                    </div>
                    <div class="form-group text-right">
                        <span class="btn btn-xs btn-white cl_add_param" data-action="1"><i class="fa fa-plus" aria-hidden="true"></i></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12" style="height: 200px;overflow-y:scroll">
                        <table class="table">
                            {% for pcc in pccsBanques %}
                                <tr data-id="{{ pcc.id|boost }}">
                                    <td><input type="text" class="input-in-jqgrid cl_edit cl_compte" data-action="2" value="{{ pcc.compte }}"></td>
                                    <td><input type="text" class="input-in-jqgrid cl_edit cl_intitule" data-action="2" value="{{ pcc.intitule }}"></td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="col-lg-6">
        <div class="ibox float-e-margins" data-type="1">
            <div class="ibox-title">
                <h5>Journal</h5>
                <div class="ibox-tools"></div>
            </div>
            <div class="ibox-content">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Code</label>
                        <div class="col-lg-9">
                            <input type="text" placeholder="Code" class="form-control cl_add cl_compte">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Libell&eacute;</label>
                        <div class="col-lg-9">
                            <input type="text" placeholder="Libellé" class="form-control cl_add cl_intitule">
                        </div>
                    </div>
                    <div class="form-group text-right">
                        <span class="btn btn-xs btn-white cl_add_param" data-action="1"><i class="fa fa-plus" aria-hidden="true"></i></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12" style="height: 200px;overflow-y:scroll">
                        <table class="table">
                            {% for journal in journalDossiers %}
                                <tr data-id="{{ journal.id|boost }}">
                                    <td><input type="text" class="input-in-jqgrid cl_edit cl_compte" data-action="2" value="{{ journal.codeStr }}"></td>
                                    <td><input type="text" class="input-in-jqgrid cl_edit cl_intitule" data-action="2" value="{{ journal.libelle }}"></td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>