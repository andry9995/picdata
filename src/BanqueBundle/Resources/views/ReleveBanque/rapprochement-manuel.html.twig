<div class="row bande white-bg">
    {# type compta #}
    <div class="col-lg-6">
        <div class="radio radio-inline">
            <input type="radio" id="js_id_engagement" value="0" checked name="radio-type-compta">
            <label for="js_id_engagement">Engagement</label>
        </div>
        <div class="radio radio-inline">
            <input type="radio" id="js_id_tresorerie" value="1" name="radio-type-compta">
            <label for="js_id_tresorerie">Tr&eacute;sorerie</label>
        </div>
    </div>
    <div class="col-lg-6">
        <span class="btn btn-white btn-xs"><i class="fa fa-key" aria-hidden="true"></i>&nbsp;Nouveau&nbsp;Cl&eacute;</span>
    </div>
</div>

<div class="row bande white-bg">
    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Date&nbsp;Op&deg;</th>
                <th>Libelle&nbsp;Banque</th>
                <th>Mouvement</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ releve.image.nom }}</td>
                <td>{{ releve.dateReleve|date('d/m/Y') }}</td>
                <td>{{ releve.libelle }}</td>
                <td align="right" id="js_id_m" data-m="{{ releve.credit - releve.debit }}">{{ (releve.credit - releve.debit)|number_format(2, ',', '&nbsp;')|raw }}</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="row bande white-bg" id="js_id_table_propositon_cle_contanier" data-id="{{ releve.id|boost }}">
    <table id="js_id_table_propositon_cle"></table>
</div>

<div class="row bande white-bg">
    <table id="js_id_table_ecriture_temp"></table>
</div>

<div class="row">
    <div class="col-lg-5">
        <label>Non&nbsp;Pris:&nbsp;</label>
        <span class="label js_ecart">&nbsp;</span>
    </div>
    <div class="col-lg-7">
        <div class="text-right">
            <span class="btn btn-sm btn-white js_close_modal"><i class="fa fa-times" aria-hidden="true"></i>&nbsp;Annuler</span>
            <span class="btn btn-sm btn-white" id="js_id_valider_pm"><i class="fa fa-file-pdf-o" aria-hidden="true"></i>&nbsp;Pi&egrave;ce&nbsp;Manquante</span>
            <span class="btn btn-sm btn-primary" id="js_id_valider_piece"><i class="fa fa-check" aria-hidden="true"></i>&nbsp;Valider</span>
        </div>
    </div>
</div>