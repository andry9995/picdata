{% if margin is not defined %}
    {% set margin = 15 %}
{% endif %}

<div class="row bande white-bg" style="margin-bottom: {{ margin }}px!important;">
    <div class="col-lg-12">
        <table class="table" style="margin-bottom: 1px!important;" id="js_releve_selected" data-id="{{ releve.id|boost }}">
            <thead>
            <tr>
                <th>Image</th>
                <th>Date&nbsp;Op&deg;</th>
                <th>Libelle&nbsp;Banque</th>
                <th>Mouvement</th>
                {#<th></th>#}
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="js_show_image_ pointer text-primary">{{ releve.image.nom }}</td>
                    <td class="hidden js_id_image">{{ releve.image.id|boost }}</td>
                    <td class="js_cl_date_operation">{{ releve.dateReleve|date('d/m/Y') }}</td>
                    <td class="js_cl_etendre_recherche">{{ releve.libelle }}</td>
                    <td align="right" id="js_id_m" data-m="{{ releve.credit - releve.debit }}">{{ (releve.credit - releve.debit)|number_format(2, ',', '&nbsp;')|raw }}</td>
                    {#<td><input class="form-control input-sm" value=""></td>#}
                </tr>

                {% if releveExt is defined and releveExt %}
                    <tr class="italic-text">
                        <td class="js_show_image_ pointer text-primary">{{ releve.image.nom }}</td>
                        <td class="hidden js_id_image">{{ releve.image.id|boost }}</td>
                        <td class="js_cl_date_operation">{{ releve.dateReleve|date('d/m/Y') }}</td>
                        <td class="">{{ releve.libelle }}</td>
                        <td align="right">{{ releveExt.montant|number_format(2, ',', '&nbsp;')|raw }}</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
</div>