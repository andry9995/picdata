{{ include('BanqueBundle:ReleveBanque:releve-line.html.twig') }}

<div class="row">
    <div class="col-lg-12 text-center">
        {% set index = 0 %}
        {% for key, tiersModel in tiersModels %}
            {% if key == 0 %}
                {% set libelle = 'Fournisseur' %}
            {% elseif key == 1 %}
                {% set libelle = 'Client' %}
            {% elseif key == 2 %}
                {% set libelle = 'Social' %}
            {% elseif key == 4 %}
                {% set libelle = 'Prospect' %}
            {% else %}
                {% set libelle = 'Autre' %}
            {% endif %}
            <div class="radio radio-info radio-inline">
                <input type="radio" class="cl_tiers_{{ key }}" id="id_radio_{{ key }}" value="{{ key }}" data-model="{{ tiersModel is null ? '' : tiersModel.compteStr }}" name="radio-type-tiers" {{ (index == 0) ? 'checked' : '' }}>
                <label for="id_radio_{{ key }}">{{ libelle }}</label>
            </div>
            {% set index = index + 1 %}
        {% endfor %}
    </div>
</div>

<div class="row">
    <div class="col-sm-12 b-r">
        <div role="form">
            <div class="form-group">
                <label>Compte</label>
                <div class="input-group m-b">
                    <span class="input-group-addon">Model:&nbsp;<span class="label label-primary" id="id_start_compte"></span></span>
                    <input type="text" placeholder="Compte" class="form-control" id="id_compte_str">
                </div>
            </div>
            <div class="form-group">
                <label>Intitul&eacute;</label>
                <input type="text" placeholder="IntitulÃ©" class="form-control" id="id_intitule">
            </div>
        </div>
    </div>
</div>

<div class="row bande white-bg">
    <div class="col-lg-12">
        <div class="text-right">
            <span class="btn btn-sm btn-white js_close_modal"><i class="fa fa-times" aria-hidden="true"></i>&nbsp;Annuler</span>
            <span class="btn btn-sm btn-warning cl_add_tiers" data-type="0"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;Ajouter</span>
            <span class="btn btn-sm btn-primary cl_add_tiers" data-type="1"><i class="fa fa-rocket" aria-hidden="true"></i>&nbsp;Ajouter&nbsp;Choisir</span>
        </div>
    </div>
</div>