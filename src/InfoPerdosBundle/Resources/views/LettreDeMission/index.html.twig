{% extends 'AdminBundle:Default:index.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/plugins/fileinput/fileinput.min.css') }}">
    {#<link rel="stylesheet" href="{{ asset('bundles/facturation/css/facturation.css') }}">#}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/plugins/fileinput/fileinput.min.js') }}"></script>
    <script src="{{ asset('js/plugins/fileinput/locales/fr.js') }}"></script>
    <script src="{{ asset('js/plugins/fileinput/themes/fa/theme.js') }}"></script>
    {#<script src="{{ asset('bundles/facturation/js/facturation-functions.js') }}"></script>#}
    {#<script src="{{ asset('bundles/facturation/js/contrat.js') }}"></script>#}
    <script src="{{ asset('bundles/infoperdos/js/lettreDeMission/lettreDeMission.js') }}"></script>
{% endblock %}

{% block wrapper_content %}


    <div class="row">
        <div class="col-lg-3">
            {{ render(controller('AppBundle:Commun:clients',{'conteneur': 0, 'tous': 0})) }}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel-body">
                <table id="js_lettre_mission" class="js-jqgrid-table"></table>
                <div id="pager_lettre_mission"></div>
            </div>
        </div>
    </div>

    <div id="ldm-modal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Lettre de Mission</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" enctype="multipart/form-data" id="lettre-form">
                        <input type="hidden" id="ldm-id">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="dossier-add">
                                Dossier
                            </label>
                            <div class="col-md-8" id="dossier-add">
  {#{{ render(controller('InfoPerdosBundle:LettreDeMission:dossier', {'attr_id': 'dossier-add', 'attr_class': 'form-control'})) }}#}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="date-ldm">
                                Date Signature
                            </label>
                            <div class="col-md-4">
                                <input type="text" class="form-control text-center" id="date-ldm" name="date-ldm">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="pdf-ldm">
                                PDF Lettre de Mission
                            </label>
                            <div class="col-md-8">
                                <input type="file" class="form-control" name="pdf_ldm[]" multiple id="pdf-ldm">
                            </div>
                        </div>
                        <div class="col-md-8 col-md-offset-4">
                            <ul id="ldm-file-list" class="list-group">
                                <li class="list-group-item">Contrat1.pdf <i class="fa fa-file-pdf-o file-pdf pull-right"></i></li>
                            </ul>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                    <button type="button" class="btn btn-primary" id="btn-save-ldm">Enregistrer</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}