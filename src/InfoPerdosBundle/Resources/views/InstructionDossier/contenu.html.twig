{#<div class="ibox-content scroller col-lg-12" id="js_contenu_instr">#}
<div class="scroller" id="js_contenu_instr">
    <div class="row">
        <div class="col-lg-3">
            {{ include('InfoPerdosBundle:Default:toutDevelopperReplier.html.twig') }}

            <div class="row">
                <div class="col-lg-12">
                    <button class="btn btn-xs btn-primary btn-block btn-tout-valider" type="submit" id = "btn-validation-instr-instructiondossier">Valider la page</button>
                </div>
            </div>
        </div>

        {{ include('InfoPerdosBundle:Default:progession.html.twig')}}

        <div class="col-lg-6">
            <div class="row">
                <div class="col-lg-12">
                    <textarea id="js_remarque_client" name="textarea" rows="5" cols="17" placeholder="Les onglets doivent être renseignés dans l'ordre de 1 à 5. Certaines zones sont obligatoires afin de valider la création du dossier, et pouvoir envoyer les images. Quand les zones obligatoires d'un onglet sont renseignées l'onglet est souligné en vert au lieu de rouge"></textarea>
                </div>
            </div>
        </div>
    </div>

    <br/>

    <div class="ibox ibox-shadow">
        <div class="ibox-title">
            <div class="col-sm-3"><h5>Méthodes comptables</h5></div>
            <div class="col-sm-1"><button class="btn btn-sm btn-primary" type="submit" id = "btn-validation-instr-methode-comptable">Valider</button></div>
            <div class="col-sm-1"><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></div>
        </div>
        <div class="ibox-content">
            {{ include('InfoPerdosBundle:InstructionDossier:methodeComptable.html.twig') }}
        </div>
    </div>

    <div class="ibox ibox-shadow">

        <div class="ibox-title">
            <div class="col-sm-3"><h5>Instructions pour la saisie</h5></div>
            <div class="col-sm-1"><button class="btn btn-sm btn-primary" type="submit" id = "btn-validation-instr-instruction-saisie">Valider</button></div>
            <div class="col-sm-1"><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></div>
        </div>
        <div class="ibox-content">
            {{ include('InfoPerdosBundle:InstructionDossier:instructionSaisie.html.twig') }}
        </div>
    </div>

    <div class="ibox ibox-shadow">

        <div class="ibox-title">

            <div class="col-sm-3"><h5>Instruction pour tous les dossiers</h5></div>
            <div class="col-sm-1"><button class="btn btn-sm btn-primary" type="submit" id = "btn-validation-instr-instruction">Valider</button></div>
            <div class="col-sm-1"><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></div>

        </div>


        <div class="ibox-content note-editor">

            <div class="scroller">

                <div class="js-instr-instruction">
                    {{ (instructionDossier is null) ? '' : instructionDossier.instruction|raw }}
                </div>

            </div>
        </div>



    </div>

    <div class="ibox ibox-shadow">

        <div class="ibox-title">

            <div class="col-sm-3"><h5>Règles de paiements</h5></div>
            <div class="col-sm-1"><button class="btn btn-sm btn-primary" type="submit" id = "btn-validation-instr-regle-paiement">Valider</button></div>
            <div class="col-sm-1"><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></div>

        </div>


        <div class="ibox-content">
            {{ include('InfoPerdosBundle:InstructionDossier:reglePaiementClient.html.twig') }}
        </div>

    </div>

</div>

