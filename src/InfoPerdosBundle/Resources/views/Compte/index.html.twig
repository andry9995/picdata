{% extends 'AdminBundle:Default:index.html.twig' %}

{% block titre %}Plan comptable et Tiers{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block contenu_droite %}
    <div class="row">
        {{ include('InfoPerdosBundle:Compte:filtre.html.twig') }}
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>PCC</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <span class="btn btn-primary btn-sm" id="js_add_pcc"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;Nouveau</span>
                    <div>
                        <table id="js_pccs"></table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Tiers</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-3">
                            <span class="btn btn-primary btn-sm" id="js_add_tiers"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;Nouveau</span>
                        </div>
                        <div class="col-sm-9" id="js_content_pcc_cobow"></div>
                    </div>
                    <div id="js_tiers"></div>
                </div>
            </div>
        </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/commun.js') }}"></script>
    <script src="{{ asset('bundles/infoperdos/js/compte/pcc.js') }}"></script>
    <script src="{{ asset('bundles/infoperdos/js/compte/tiers.js') }}"></script>
    <script src="{{ asset('bundles/infoperdos/js/compte/index.js') }}"></script>
{% endblock %}
