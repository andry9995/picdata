<form role="form" class="form-inline">
    <div class="form-group">
        <label for="js_pcc_client">PCC&nbsp;Fournisseur</label>
        <select id="js_pcc_client" class="form-control js_collectif" data-type="{{ 0 }}">
            <option value="{{ -1|boost }}">Aucun</option>
            {% for pcc in pccsF %}
                <option value="{{ pcc.id|boost }}" {{ (pcc == f) ? 'selected' : '' }}>{{ pcc.compte }}{#-{{ pcc.intitule }}#}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <label for="js_pcc_fournisseur">PCC&nbsp;client</label>
        <select id="js_pcc_fournisseur" class="form-control js_collectif" data-type="{{ 1 }}">
            <option value="{{ -1|boost }}">Aucun</option>
            {% for pcc in pccsC %}
                <option value="{{ pcc.id|boost }}" {{ (pcc == c) ? 'selected' : '' }}>{{ pcc.compte }}{#-{{ pcc.intitule }}#}</option>
            {% endfor %}
        </select>
    </div>
</form>