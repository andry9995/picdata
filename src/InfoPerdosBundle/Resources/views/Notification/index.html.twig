{% extends 'AdminBundle:Default:index.html.twig' %}
{% block titre %}Notification{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/app/js/commun.js') }}"></script>
    <script src="{{ asset('bundles/infoperdos/js/notification/notification.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block wrapper_content %}
    <div class="row">
        <div class="col-sm-12">
            {{ include('InfoPerdosBundle:Notification:filtre.html.twig')}}
        </div>
    </div>
    <br>
    <div class="col-sm-12">
        {{ include('InfoPerdosBundle:Notification:gestion-notification.html.twig') }}
    </div>
    {# form to remove notification #}
    <div id="js_hidden_remove_notification" class="hidden">
        <div class="form-horizontal">
            <div class="form-group">
                <h4 class="text-center"><b>Voulez-vous vraiment supprimer cet enregistrement?</b></h4>
            </div>
            <div class="form-group text-right">
                <span class="btn btn-sm btn-white js_close_modal"><i class="fa fa-times" aria-hidden="true"></i>&nbsp;Annuler</span>
                <span class="btn btn-sm btn-primary js_remove_notification_select"><i class="fa fa-remove" aria-hidden="true"></i>&nbsp;Supprimer</span>
            </div>
        </div>
    </div>
    {# fin form remove notification #}
{% endblock %}