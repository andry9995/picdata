<form class="form-horizontal" id="js_form_prest_comptable">

    <div class="row">

        <div class="col-sm-4">

            <div class="form-group">
                <label class="col-lg-4 control-label">Prestations</label>

                <div class="col-lg-7">
                    <select class="form-control select-prestation prest_comptable" id="js_prestation_comptable_demande" data-field="TypePrestation2">
                        {% set typePrestationDossier = (dossier is null) ? -1 : (dossier.typePrestation2 is null)? -1 : dossier.typePrestation2.id %}
                        <option></option>
                        {% for typePrestation in typePrestations %}
                            <option value="{{ typePrestation.id }}" data-code="{{ typePrestation.code }}" {{ (typePrestationDossier == typePrestation.id) ? 'selected' : '' }}>{{ typePrestation.libelle }}</option>
                        {% endfor %}
                    </select>

                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-4 control-label">Autres</label>

                <div class="col-lg-7">
                    <input type="text" class="form-control prest_comptable" name="prestation_autre" id="js_prestation_autre"
                           data-field="AutrePrestation" value="{{ (dossier is null)? '' : dossier.autrePrestation }}">
                </div>
            </div>

        </div>

        <div class="col-sm-3"></div>

        <div class="col-sm-5">
            <textarea id="js_remarque_prestation_comptable" name="textarea" rows="5" cols="17" placeholder="Remarques">{{ (remarqueDossier is null)? '' : remarqueDossier.prestationComptable }}</textarea>
        </div>

        {#<div class=" col-sm-2"></div>#}


        {#<div class=" col-sm-6">#}
            {#<div class="form-group">#}
                {#<label class="col-lg-4 control-label">Instruction pour la saisie</label>#}

                {#<textarea class="col-lg-8"></textarea>#}
            {#</div>#}
        {#</div>#}

    </div>

</form>