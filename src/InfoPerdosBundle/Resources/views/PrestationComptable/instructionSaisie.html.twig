<div class="ibox-content note-editor">

    <div class="scroller" style="height: 200px;">

        {#<div class="wrapper p-md prest_fiscal" id="js_instruction_saisie">#}
        <div class="prest_fiscal" id="js_instruction_saisie">
            {{ (instructionSaisie is null) ? '' : instructionSaisie.instruction|raw }}
        </div>
    </div>
</div>


<div class="modal" id="js_instruction_modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            </div>
            <div class="modal-body">

                <div class="row">
                    <form class="form-horizontal" enctype="multipart/form-data" id="dossier-fichier-form">
                        <div class="row">
                            <input type="file" class="form-control js_instr_instruction_pj" name="pdf_dossier" id="pdf-dossier">
                        </div>
                        <br/>
                        <div class="row">
                            <ul id="fichier-dossier-list" class="list-group">
                            </ul>
                        </div>
                    </form>
                </div>

                <br/>
            </div>
        </div>
    </div>
</div>