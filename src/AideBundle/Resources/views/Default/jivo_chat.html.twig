{% extends 'base-simple.html.twig' %}

{% block title %}Asistance{% endblock %}
{% block body_class %}white-bg{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        body { background: #2d2d37; }
        a { color: white; text-decoration: none; }

        .arrow {
            text-align: center;
            margin: 8% 0;
        }
        .fixed-bottom {
            position: fixed;
            bottom: 0;
            right: 160px;
        }
        .bounce {
            -moz-animation: bounce 2s infinite;
            -webkit-animation: bounce 2s infinite;
            animation: bounce 2s infinite;
        }

        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateY(0);
            }
            40% {
                transform: translateY(-30px);
            }
            60% {
                transform: translateY(-15px);
            }
        }
    </style>
{% endblock %}
