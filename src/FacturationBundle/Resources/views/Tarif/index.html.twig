{% extends 'AdminBundle:Default:index.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/facturation/css/facturation.css') }}">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/facturation/js/facturation-functions.js') }}"></script>
    <script src="{{ asset('bundles/facturation/js/tarif.js') }}?v=1.4"></script>
{% endblock %}

{% block wrapper_content %}
    <div class="col-lg-12">
        <div class="tabs-container jqgrid-tabs">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#tarif-general">Tarifs Généraux</a></li>
                <li class=""><a data-toggle="tab" href="#tarif-client">Tarifs par Client</a></li>
            </ul>

            <div class="tab-content">
                <div id="tarif-general" class="tab-pane active">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-3">
                                {{ render(controller('FacturationBundle:ParamGen:anneeTarif', {'attr_id': 'annee-gen'})) }}
                            </div>
                            <div class="col-md-3">
                                {{ render(controller('FacturationBundle:ParamGen:modelTarif', {'json': 0, 'attr_id': 'model-tarif-gen'})) }}
                            </div>
                            <div class="col-md-1">
                                <button id="btn-tarif-general" class="btn btn-primary">Go</button>
                            </div>
                            <div class="col-md-5 text-right">
                                <div class="col-md-4">
                                    <span id="indice-value-gen" class="badge badge-danger">
                                        Indice
                                    </span>
                                </div>
                                <div class="col-md-4">
                                    <label class="control-label" for="recalculer-pu-gen">
                                        Recalculer Pu
                                    </label>
                                    <input id="recalculer-pu-gen" type="checkbox" class="js-switch">
                                </div>
                                <div class="col-md-4">
                                    <label class="control-label" for="apply-indice-gen">
                                        Appliquer indice
                                    </label>
                                    <input id="apply-indice-gen" type="checkbox" class="js-switch" checked>
                                </div>
                            </div>
                        </div>
                        <table id="js_tarif_general" class="js-jqgrid-table"></table>
                        <div id="pager_tarif_general"></div>
                    </div>
                </div>
                <div id="tarif-client" class="tab-pane ">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-3">
                                {{ render(controller('AppBundle:Commun:clients',{'conteneur': 0, 'tous': 0})) }}
                            </div>
                            <div class="hidden" id="js_conteneur_site"></div>
                            <div class="col-md-3" id="js_conteneur_dossier"></div>
                            <div class="col-md-6 text-right">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="control-label" for="recalculer-pu-client">
                                            Recalculer Pu
                                        </label>
                                        <input id="recalculer-pu-client" type="checkbox" class="js-switch">

                                    </div>
                                    <div class="col-md-6">
                                        <label class="control-label" for="apply-indice-client">
                                            Appliquer indice
                                        </label>
                                        <input id="apply-indice-client" type="checkbox" class="js-switch" checked>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                {{ render(controller('FacturationBundle:ParamGen:anneeTarif', {'attr_id': 'annee-client'})) }}
                            </div>
                            <div class="col-md-3">
                                {{ render(controller('FacturationBundle:ParamGen:modelTarif', {'json': 0, 'attr_id': 'model-tarif-client'})) }}
                            </div>
                            <div class="col-md-1">
                                <button id="btn-tarif-client" class="btn btn-primary">Go</button>
                            </div>
                            <div class="col-md-5 text-right">
                                <span id="indice-value-client" class="badge badge-danger">
                                    Indice
                                </span>
                            </div>
                        </div>
                        <table id="js_tarif_client" class="js-jqgrid-table"></table>
                        <div id="pager_tarif_client"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}