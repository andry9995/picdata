{% if attr_id != '' %}
    {% set select_id = attr_id %}
{% else %}
    {% set select_id = 'annee' %}
{% endif %}
<form class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">
            Tarif
        </label>
        <div class="col-sm-10">
            <select id="{{ select_id }}" class="form-control model-tarif">
                {% for annee in annees %}
                    {% if annee.annee == current %}
                        <option value="{{ annee.id }}" selected="selected">{{ annee.annee }}</option>
                    {% else %}
                        <option value="{{ annee.id }}">{{ annee.annee }}</option>
                    {% endif %}
                {% endfor %}
            </select>
        </div>
    </div>
</form>