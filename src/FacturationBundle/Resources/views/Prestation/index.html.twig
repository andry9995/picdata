{% extends 'AdminBundle:Default:index.html.twig' %}
{% block titre %}
    Prestation - {{ parent() }}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/facturation/css/facturation.css') }}">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/facturation/js/facturation-functions.js') }}"></script>
    <script src="{{ asset('bundles/facturation/js/prestation.js') }}?v=1.0"></script>
{% endblock %}

{% block wrapper_content %}
    <div class="col-lg-12">
        <div class="tabs-container jqgrid-tabs">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#prestation-general">Prestations Générales</a></li>
                <li class=""><a data-toggle="tab" href="#prestation-client">Prestations par Client</a></li>
            </ul>

            <div class="tab-content">
                <div id="prestation-general" class="tab-pane active">
                    <div class="panel-body">
                        <table id="js_prestation_general" class="js-jqgrid-table"></table>
                        <div id="pager_prestation_general"></div>
                    </div>
                </div>
                <div id="prestation-client" class="tab-pane ">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-sm-3">
                                {{ render(controller('AppBundle:Commun:clients',{'conteneur': 0, 'tous': 0})) }}
                            </div>
                            <div class="col-sm-3 hidden" id="js_conteneur_site"></div>
                            <div class="col-sm-3" id="js_conteneur_dossier"></div>
                            <div class="col-sm-1">
                                <button id="btn-prestation" class="btn btn-primary">Go</button>
                            </div>
                        </div>
                        <table id="js_prestation_client" class="js-jqgrid-table"></table>
                        <div id="pager_prestation_client"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}