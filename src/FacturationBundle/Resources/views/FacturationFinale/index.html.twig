{% extends 'AdminBundle:Default:index.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/facturation/js/billing.js') }}"></script>
{% endblock %}

{% block wrapper_content %}
	<div class="col-lg-12">
        <div class="tabs-container jqgrid-tabs">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#billing">Facturation finale</a></li>
            </ul>

            <div class="tab-content">
                <div id="billing" class="tab-pane active">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-3">
                                {{ render(controller('AppBundle:Commun:clients',{'conteneur': 0})) }}
                            </div>
                            <div class="col-lg-3">
                                {{ render(controller('AppBundle:Commun:exercices',{'tous': 0})) }}
                            </div>
                            <div class="col-lg-3">
                                <form id="form-saisi-fini" class="form-horizontal form-select-mois">
                                    <div class="form-group">
                                        <label class="col-lg-4 control-label">Cumul au</label>
                                        <div class="col-lg-7">
                                            <select id="select-saisi-fini" class="form-control"></select>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="col-lg-2">
                                {{ render(controller('FacturationBundle:ParamGen:anneeTarif')) }}
                            </div>
                            <div class="col-lg-1">
                                <div class="btn-group">
                                    <button id="btn-billing" type="button" class="btn btn-primary">Go</button>
                                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    	<i class="fa fa-download" aria-hidden="true"></i>
                                        {# <span class="caret"></span> #}
                                        <span class="sr-only">Toggle Dropdown</span>
                                    </button>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a id="btn-export-excel" href="#"><i class="fa fa-file-excel-o"></i> Exporter en Excel</a></li>
                                        <li class=""><a id="btn-export-pdf" href="#"><i class="fa fa-file-pdf-o"></i> Exporter en Pdf</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div>
                            <table id="js_billing" class="js-jqgrid-table"></table>
                            <div id="pager_billing"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

