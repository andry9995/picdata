                    <div class="col-md-12 item">
                        <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                        <span class="info-text pointer" onclick="showNewMail({{ prospect.id }});">{{ prospect.email }}</span>
                    </div>
                </div>
