                    <span class="info-text">
                    {% if prospect.adresseFacturation1 != '' %}
                        {{ prospect.adresseFacturation1 ~ ', ' }}
                    {% endif %}
                        {% if prospect.villeFacturation != '' %}
                            {{ prospect.villeFacturation ~ ', ' }}
                        {% endif %}
                        {{ (prospect.paysFacturation is null) ? '' : prospect.paysFacturation.nom }}
                    </span>
                </div>
            </div>

            {% if prospect.oneActivite %}
                <div class="row">
                    <div class="col-md-12 item">
                        <span class="info-text">{{ prospect.oneActivite.nom }}</span>
                    </div>
                </div>
            {% endif %}

            {% if prospect.telephone != '' %}
                <div class="row">
                    <div class="col-md-12 item">
                        <span class="glyphicon glyphicon-earphone" aria-hidden="true"></span>
                        <span class="info-text">{{ prospect.telephone }}</span>
                    </div>
                </div>
            {% endif %}

