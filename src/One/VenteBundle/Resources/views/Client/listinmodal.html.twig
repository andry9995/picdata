<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                    aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="modal-new-client-title">Choisir un Client</h4>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Nom</th>
                            <th>Qualification</th>
                            <th>Note</th>
                            <th>Ville</th>
                            <th>Code Postal</th>
                            <th>Pays</th>
                            <th>Secteur activité</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for client in clients %}
                            <tr>
                                <td><input type="checkbox" class="account" value="{{ client.id~';'~client.numeroClient~';'~client.intitule }}"></td>
                                <td>{{ client.intitule }}</td>
                                <td>{{ client.oneQualification.nom }}</td>
                                <td>{{ client.note }}</td>
                                <td>{{ client.villeFacturation }}</td>
                                <td>{{ client.codePostalFacturation }}</td>
                                <td>{{ (client.paysFacturation is null) ? '' : client.paysFacturation.nom }}</td>
                                <td>{{ client.oneActivite.nom }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
        <button type="button" class="btn btn-primary" onclick="selectAccount();">Sélectionner</button>
    </div>
</div>
                