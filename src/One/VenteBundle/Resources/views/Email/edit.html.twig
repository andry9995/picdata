<div class="modal-content">
    <div class="modal-body">
        <div class="row">
            <div class="send-action">
               <form id="email-form">
                    <div class="form-group">
                        <label for="recipient">A*</label>
                        <input type="email" class="form-control" id="recipient" name="recipient" value="{{ tiers.email }}">
                    </div>
                    <div class="form-group">
                        <label for="sender">De: </label>
                        <select class="form-control" id="sender" name="sender">
                            <option value="{{ utilisateur.email }}">{{ utilisateur.email }}</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="subject">Objet: </label>
                        <input type="text" class="form-control" id="subject" name="subject" value="">
                    </div>
                    <div class="form-group">
                        <label for="message">Message:</label>
                        <textarea class="form-control" id="message" name="message"></textarea>
                    </div>
                    {#<div class="checkbox">#}
                        {#<label>#}
                            {#<input type="checkbox" id="copie" name="copie"> M'envoyer une copie#}
                        {#</label>#}
                    {#</div>#}
                </form>
                <button class="btn btn-primary pull-right" onclick="sendMail({{ tiers.id }});">Envoyer</button>
            </div>
        </div>
    </div>
</div>