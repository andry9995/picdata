<div class="row task-bar">
    <div class="col-md-1">
        <span class="glyphicon glyphicon-menu-left btn-back" onclick="loadListModele();"></span>
    </div>
    <div class="col-md-8">
        <h2 class="heading">Modèle: {{ modele.modeleName }}</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal" id="modele-form">
            <input type="hidden" class="form-control" id="id"  name="id" value="{{ modele.id }}">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="modele-name" class="col-md-2 control-label">Nom du modèle*</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" id="modele-name"  name="modele-name" value="{{ modele.modeleName }}" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="modele-description" class="col-md-2 control-label">Description du modèle</label>
                        <div class="col-md-6">
                            <textarea class="form-control" id="modele-description"  name="modele-description">{{ modele.modeleDescription }}</textarea>
                        </div>
                    </div>
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <div class="modele-preview" style="color: {{ modele.fontColor }}; font-family: {{ modele.fontFamily }}; font-size: {{ modele.fontSize }}px;">
                        <div class="row">
                            <div class="col-md-6">
                                <span class="company-name" {% if modele.showCompanyName == 0 %}style="display: none;"{% endif %}>{{ params.companyNom }}<br></span>
                                <span class="company-address">{{ params.companyAdresse }}<br></span>
                                <span class="company-country">{{ params.companyPays.nom }} </span><span class="company-postal-code">{{ params.companyCodePostal }}<br></span>
                                <span class="company-email">{{ params.companyMail }}<br></span>
                                <span class="company-tel">{{ params.companyTel }}<br></span>
                                <span class="company-siteweb">{{ params.companySiteweb }}<br></span>
                            </div>
                            <div class="col-md-6 pos-right">
                                <span class="document-type">Facture<br></span>
                                <span class="document-code">N° DOC-001<br></span>
                                <span class="document-date">18/10/2017<br></span>
                                <span class="document-reglement" {% if modele.showReglement == 0 %}style="display: none;"{% endif %}>Comptant<br></span>
                                <span class="document-total">Montant à payer <b>233,00 {{ params.comptableDevise.symbole }}</b><br></span>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-md-6"><span class="customer-num" {% if modele.showNumClient == 0 %}style="display: none;"{% endif %}><b>Client CUS-123</b><br><br></span></div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <p class="shipping-address" {% if modele.showShippingAddress == 0 %}style="display: none;"{% endif %}>
                                    <span class="shipping-address-label">{{ modele.shippingAddressLabel }}</span><br>
                                    <span class="shipping-customer-contact">Jane Doe<br></span>
                                    <span class="shipping-customer-company">ACME Company<br></span>
                                    <span class="shipping-customer-address">101 Van Ness<br></span>
                                    <span class="shipping-customer-city">San Francisco CA 94103<br></span>
                                    <span class="shipping-customer-country">Etats-unis<br></span>
                                    <span class="shipping-customer-tel" {% if modele.showTelClient == 0 %}style="display: none;"{% endif %}>Tel: (555) 555-5555<br></span>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p class="billing-address" {% if modele.billingAddressRight == 0 %}style="display: none;"{% endif %}>
                                    <span class="billing-address-label">{{ modele.billingAddressLabel }}</span><br>
                                    <span class="billing-customer-contact">Jane Doe<br></span>
                                    <span class="billing-customer-company">ACME Company<br></span>
                                    <span class="billing-customer-address">2239 Union St.<br></span>
                                    <span class="billing-customer-city">San Francisco CA 94103<br></span>
                                    <span class="billing-customer-country">Etats-unis<br></span>
                                    <span class="billing-customer-tel" {% if modele.showTelClient == 0 %}style="display: none;"{% endif %}>Tel: (555) 555-5555<br></span>
                                    <span class="company-tva-intracom" {% if modele.showTvaIntracom == 0 %}style="display: none;"{% endif %}>TVA Intracommunautaire : 1235<br></span>
                                </p>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table">
                                    <tr>
                                        <th style="background-color: {{ modele.headColor }};"><span class="designation-label">{{ modele.designationLabel }}</span></th>
                                        <th style="background-color: {{ modele.headColor }}; {% if modele.showQuantity == 0 %}display: none;{% endif %}" class="pos-right quantity-col"><span class="quantity-label">{{ modele.quantityLabel }}</span></th>
                                        <th style="background-color: {{ modele.headColor }}; {% if modele.showPrice == 0 %}display: none;{% endif %}" class="pos-right price-col"><span class="price-label">{{ modele.priceLabel }}</span></th>
                                        <th style="background-color: {{ modele.headColor }};" class="pos-right">Montant HT</th>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span class="article-code" {% if modele.showProductCode == 0 %}style="display: none;"{% endif %}>PS-001 </span><span class="article-name">Nom article</span><br>
                                            <span class="article-description">Description article</span>
                                        </td>
                                        <td class="pos-right quantity-col" {% if modele.showQuantity == 0 %}style="display: none;"{% endif %}>2</td>
                                        <td class="pos-right price-col" {% if modele.showPrice == 0 %}style="display: none;"{% endif %}>8,00 {{ params.comptableDevise.symbole }}<span class="article-unit" {% if modele.showUnit == 0 %}style="display: none;"{% endif %}> /heure</span></td>
                                        <td class="pos-right">16,00 {{ params.comptableDevise.symbole }}</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span class="article-code" {% if modele.showProductCode == 0 %}style="display: none;"{% endif %}>PS-001 </span><span class="article-name">Nom article</span><br>
                                            <span class="article-description">Description article</span>
                                        </td>
                                        <td class="pos-right quantity-col" {% if modele.showQuantity == 0 %}style="display: none;"{% endif %}>2</td>
                                        <td class="pos-right price-col" {% if modele.showPrice == 0 %}style="display: none;"{% endif %}>64,00 {{ params.comptableDevise.symbole }}<span class="article-unit" {% if modele.showUnit == 0 %}style="display: none;"{% endif %}> /jour</span></td>
                                        <td class="pos-right">128,00 {{ params.comptableDevise.symbole }}</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4"></div>
                            <div class="col-md-8">
                                <table class="table">
                                    <tr>
                                        <td><span class="ht-label">Total HT</span></td>
                                        <td class="pos-right"><span class="ht-value">143 {{ params.comptableDevise.symbole }}</span></td>
                                    </tr>
                                    <tr style="background-color: #F0F0F0;">
                                        <td><span class="ttc-label">Total TTC</span></td>
                                        <td class="pos-right"><span class="ttc-label">143 {{ params.comptableDevise.symbole }}</span></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p class="payment-info" {% if modele.showPaymentInfo == 0 %}style="display: none;"{% endif %}>
                                    <span class="payment-info-label">{{ modele.paymentInfoLabel }}</span><br>
                                    <span class="deadline" {% if modele.showDeadline == 0 %}style="display: none;"{% endif %}><b>143,00 {{ params.comptableDevise.symbole }}</b> le <b>31/10/2017</b></span><br>
                                    <span class="payment-info-default"></span><br>
                                </p>
                            </div>
                            <div class="col-md-8"><span class="global-note"></span></div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="modele-config">
                        <hr/>
                        <h4>APPARENCE</h4>
                        <hr/>
                        <div class="form-group">
                            <label for="head-color" class="col-md-4 control-label">Couleur des entêtes</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control colorpicker" id="head-color" name="head-color" value="{{ modele.headColor }}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="font-family" class="col-md-4 control-label">Police</label>
                            <div class="col-md-6 col-sm-8 col-xs-8">
                                <select class="form-control" id="font-family" name="font-family" placeholder="">
                                    <option value="Arial" {% if modele.fontFamily == 'Arial' %}selected="selected"{% endif %}>Arial</option>
                                    <option value="Courier new" {% if modele.fontFamily == 'Courier new' %}selected="selected"{% endif %}>Courier new</option>
                                    <option value="Times New Roman" {% if modele.fontFamily == 'Times New Roman' %}selected="selected"{% endif %}>Times New Roman</option>
                                    <option value="Palatino" {% if modele.fontFamily == 'Palatino' %}selected="selected"{% endif %}>Palatino</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="font-size" class="col-md-4 control-label">Taille de police</label>
                            <div class="col-md-6 col-sm-8 col-xs-8">
                                <select class="form-control" id="font-size" name="font-size" placeholder="">
                                    <option value="10" {% if modele.fontSize == '10' %}selected="selected"{% endif %}>Petite</option>
                                    <option value="13" {% if modele.fontSize == '13' %}selected="selected"{% endif %}>Moyenne</option>
                                    <option value="16" {% if modele.fontSize == '16' %}selected="selected"{% endif %}>Grande</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="font-color" class="col-md-4 control-label">Couleur de police</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control colorpicker" id="font-color" name="font-color" value="{{ modele.fontColor }}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Nom de l'entreprise</label>
                            <div class="col-md-6">
                                <div class="radio radio-inline">
                                    <input type="radio" id="show-company-name-1" value="1" name="show-company-name" {% if modele.showCompanyName == 1 %}checked{% endif %}>
                                    <label for="show-company-name-1">Oui</label>
                                </div>
                                <div class="radio radio-inline">
                                    <input type="radio" id="show-company-name-0" value="0" name="show-company-name" {% if modele.showCompanyName == 0 %}checked{% endif %}>
                                    <label for="show-company-name-0">Non</label>
                                </div>
                            </div>
                        </div>
                        <hr/>
                        <h4>ENTETE</h4>
                        <hr/>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Reglement</label>
                            <div class="col-md-6">
                                <div class="radio radio-inline">
                                    <input type="radio" id="show-reglement-1" value="1" name="show-reglement" {% if modele.showReglement == 1 %}checked{% endif %}>
                                    <label for="show-reglement-1">Oui</label>
                                </div>
                                <div class="radio radio-inline">
                                    <input type="radio" id="show-reglement-0" value="0" name="show-reglement" {% if modele.showReglement == 0 %}checked{% endif %}>
                                    <label for="show-reglement-0">Non</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Numéro client</label>
                            <div class="col-md-6">
                                <div class="radio radio-inline">
                                    <input type="radio" id="show-num-client-1" value="1" name="show-num-client" {% if modele.showNumClient == 1 %}checked{% endif %}>
                                    <label for="show-num-client-1">Oui</label>
                                </div>
                                <div class="radio radio-inline">
                                    <input type="radio" id="show-num-client-0" value="0" name="show-num-client" {% if modele.showNumClient == 0 %}checked{% endif %}>
                                    <label for="show-num-client-0">Non</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Tel client</label>
                            <div class="col-md-6">
                                <div class="radio radio-inline">
                                    <input type="radio" id="show-tel-client-1" value="1" name="show-tel-client" {% if modele.showTelClient == 1 %}checked{% endif %}>
                                    <label for="show-tel-client-1">Oui</label>
                                </div>
                                <div class="radio radio-inline">
                                    <input type="radio" id="show-tel-client-0" value="0" name="show-tel-client" {% if modele.showTelClient == 0 %}checked{% endif %}>
                                    <label for="show-tel-client-0">Non</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Adresse de livraison</label>
                            <div class="col-md-6">
                                <div class="radio radio-inline">
                                    <input type="radio" id="show-shipping-address-1" value="1" name="show-shipping-address" {% if modele.showShippingAddress == 1 %}checked{% endif %}>
                                    <label for="show-shipping-address-1">Oui</label>
                                </div>
                                <div class="radio radio-inline">
                                    <input type="radio" id="show-shipping-address-0" value="0" name="show-shipping-address" {% if modele.showShippingAddress == 0 %}checked{% endif %}>
                                    <label for="show-shipping-address-0">Non</label>
                                </div>
                            </div>
                            <div class="col-md-4"></div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" id="shipping-address-label" name="shipping-address-label"  value="{{ modele.shippingAddressLabel }}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Adresse de facturation</label>
                            <div class="col-md-6">
                                <div class="radio radio-inline">
                                    <input type="radio" id="billing-address-right-1" value="1" name="billing-address-right" {% if modele.billingAddressRight == 1 %}checked{% endif %}>
                                    <label for="billing-address-right-1">Oui</label>
                                </div>
                                <div class="radio radio-inline">
                                    <input type="radio" id="billing-address-right-0" value="0" name="billing-address-right" {% if modele.billingAddressRight == 0 %}checked{% endif %}>
                                    <label for="billing-address-right-0">Non</label>
                                </div>
                            </div>
                            <div class="col-md-4"></div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" id="billing-address-label" name="billing-address-label"  value="{{ modele.billingAddressLabel }}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">TVA Intracom</label>
                            <div class="col-md-6">
                                <div class="radio radio-inline">
                                    <input type="radio" id="show-tva-intracom-1" value="1" name="show-tva-intracom" {% if modele.showTvaIntracom == 1 %}checked{% endif %}>
                                    <label for="show-tva-intracom-1">Oui</label>
                                </div>
                                <div class="radio radio-inline">
                                    <input type="radio" id="show-tva-intracom-0" value="0" name="show-tva-intracom" {% if modele.showTvaIntracom == 0 %}checked{% endif %}>
                                    <label for="show-tva-intracom-0">Non</label>
                                </div>
                            </div>
                        </div>
                        <hr/>
                        <h4>TABLEAU</h4>
                        <hr/>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Désignation</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" id="designation-label" name="designation-label"  value="{{ modele.designationLabel }}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Quantité</label>
                            <div class="col-md-6">
                                <div class="radio radio-inline">
                                    <input type="radio" id="show-quantity-1" value="1" name="show-quantity" {% if modele.showQuantity == 1 %}checked{% endif %}>
                                    <label for="show-quantity-1">Oui</label>
                                </div>
                                <div class="radio radio-inline">
                                    <input type="radio" id="show-quantity-0" value="0" name="show-quantity" {% if modele.showQuantity == 0 %}checked{% endif %}>
                                    <label for="show-quantity-0">Non</label>
                                </div>
                            </div>
                            <div class="col-md-4"></div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" id="quantity-label" name="quantity-label"  value="{{ modele.quantityLabel }}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Prix unitaire</label>
                            <div class="col-md-6">
                                <div class="radio radio-inline">
                                    <input type="radio" id="show-price-1" value="1" name="show-price" {% if modele.showPrice == 1 %}checked{% endif %}>
                                    <label for="show-price-1">Oui</label>
                                </div>
                                <div class="radio radio-inline">
                                    <input type="radio" id="show-price-0" value="0" name="show-price" {% if modele.showPrice == 0 %}checked{% endif %}>
                                    <label for="show-price-0">Non</label>
                                </div>
                            </div>
                            <div class="col-md-4"></div>
                            <div class="col-md-6">
                                <input type="text" class="form-control" id="price-label" name="price-label"  value="{{ modele.priceLabel }}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Unité de mesure</label>
                            <div class="col-md-6">
                                <div class="radio radio-inline">
                                    <input type="radio" id="show-unit-1" value="1" name="show-unit" {% if modele.showUnit == 1 %}checked{% endif %}>
                                    <label for="show-unitt-1">Oui</label>
                                </div>
                                <div class="radio radio-inline">
                                    <input type="radio" id="show-unit-0" value="0" name="show-unit" {% if modele.showUnit == 0 %}checked{% endif %}>
                                    <label for="show-unit-0">Non</label>
                                </div>
