<div class="row">
    <div class="col-md-12">
        <div class="pull-right">
            <button class="btn btn-primary" data-toggle="modal" onclick="loadNewModele();">Nouveau</button>
        </div>
    </div>
</div>

<br/>

<div class="row">
    <div class="col-lg-12">
        <table class="table">
            <tr>
                <th>Nom</th>
                <th>Note</th>
                <th></th>
            </tr>
            {% for modele in modeles %}
                <tr>
                    <td>{{ modele.modeleName }}</td>
                    <td>{{ modele.modeleDescription }}</td>
                    <td>
                        <div class="pull-right">
                            {% if modele.id > 1 %}
                                <button type="button" class="btn btn-default" onclick="loadEditModele({{ modele.id }}, 0);">Editer</button>
                                <button type="button" class="btn btn-danger" onclick="deleteModele({{ modele.id }});"><i class="fa fa-trash" aria-hidden="true"></i></button>
                            {% else %}
                                <button type="button" class="btn btn-default" onclick="loadEditModele({{ modele.id }}, 1);">Afficher</button>
                            {% endif %}
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
</div>


