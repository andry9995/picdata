{% extends "AdminBundle:Default:index.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/onevente/css/default.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/onevente/css/client.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/oneprospect/css/contactclient.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/oneprospect/css/datefilter.css') }}"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/notefrais/js/communTpe.js') }}"></script>

    <script src="{{ asset('bundles/onevente/js/article.js') }}"></script>
    <script src="{{ asset('bundles/oneprospect/js/datefilter.js') }}"></script>
    <script src="{{ asset('bundles/oneachat/js/default.js') }}"></script>
    <script src="{{ asset('bundles/oneachat/js/fournisseur.js') }}"></script>
    <script src="{{ asset('bundles/oneachat/js/contactfournisseur.js') }}"></script>
